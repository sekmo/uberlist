{
  'extends': 'airbnb',
  'rules': {
    'func-names': ['error', 'never'],
    'no-var': 0,
    'vars-on-top': 0,
    'prefer-arrow-callback': 0,
    'prefer-template': 0,
    'object-shorthand': 0,
    'space-before-function-paren': 0,
  },
  'env': {
    'browser': true,
    'commonjs': true,
    'es6': true,
    'jquery': true
  },
  'plugins': ['html'],
  'settings': {
    'html/html-extensions': ['.js.erb'],
  },
}
